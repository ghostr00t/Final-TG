<div data-ng-controller="highScoresController" class="container">

    <div class="row">
        <div class="col-md-12">
            <strong class="error">{{ error }}</strong>
            <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Add New</a></p>
            <form name="addHighScore" data-ng-show="addMode" style="width:600px;margin:0px auto;">
                <div class="form-group">
                    <label for="pid" class="col-sm-2 control-label">ID</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="pid" placeholder="please enter id" data-ng-model="newhighscore.Id" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="pname" class="col-sm-2 control-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="pname" placeholder="please enter your username" data-ng-model="newhighscore.Userame" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="score" class="col-sm-2 control-label">Score</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="pscore" placeholder="please enter a score" data-ng-model="newhighscore.Score" required />
                    </div>
                </div>               
                <br />
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Add" data-ng-click="add()" data-ng-disabled="!addHighScore.$valid" class="btn btn-primary" />
                        <input type="button" value="Cancel" data-ng-click="toggleAdd()" class="btn btn-primary" />
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <br />
            <br />
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="width:800px">
                    <tr>
                        <th>#</th>
                        <td>Username</td>
                        <th>Score</th>
                    </tr>


                    <tr data-ng-repeat="highScore in highScores">


                        <td><strong data-ng-hide="highScore.editMode">{{ highScore.Id }}</strong></td>

                        <td>
                            <p data-ng-hide="highScore.editMode">{{ highScore.Username }}</p>
                            <input data-ng-show="highScore.editMode" type="text" data-ng-model="highScore.Username" />
                        </td>

                        <td>
                            <p data-ng-hide="highScore.editMode">{{ highScore.Score }}</p>
                            <input data-ng-show="highScore.editMode" type="text" data-ng-model="highScore.Score" />
                        </td>

                        <td>
                            <p data-ng-hide="highScore.editMode"><a data-ng-click="toggleEdit(highScore)" href="javascript:;">Edit</a> | <a data-ng-click="deletehighscore(highScore)" href="javascript:;">Delete</a></p>
                            <p data-ng-show="highScore.editMode"><a data-ng-click="save(highScore)" href="javascript:;">Save</a> | <a data-ng-click="toggleEdit(highScore)" href="javascript:;">Cancel</a></p>
                        </td>


                    </tr>


                </table>
                <hr />
            </div>
        </div>
    </div>




    <div id="mydiv" data-ng-show="loading">
        <img src="Images/ajax-loader.gif" class="ajax-loader" />
    </div>
</div>
